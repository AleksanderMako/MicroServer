{
  
  "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "baseUrl": ".",
      "skipLibCheck": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      
      "paths": {
          "*": [
              "node_modules/*",
              "user-registration-service/src/types/*"
          ]
      }
  },
  "include": [
    
      "./src/**/*.ts"
  ],
  "exclude": [
      "node_modules/*",
      "./test/**/*.ts",
      "./dist"
  ]
}